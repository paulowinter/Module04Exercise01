<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Module03Exercise02.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Module03Exercise02.View"
    Shell.FlyoutBehavior="Disabled"
    Title="Module03Exercise02">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:EmployeePage}"
        Route="EmployeePage" />

    <ShellContent
    Title="Log In"
    ContentTemplate="{DataTemplate views:LoginPage}"
    Route="LoginPage" />

    <ShellContent
    Title="Offline"
    ContentTemplate="{DataTemplate views:OfflinePage}"
    Route="OfflinePage" />

    <ShellContent
        Title="Add Employee"
        ContentTemplate="{DataTemplate views:AddEmployee}"
        Route="AddEmployee" />

</Shell>